<Window x:Class="PinPadVirtual.PinPad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinPadVirtual"
        mc:Ignorable="d"
        Title="PinPad" Height="600" Width="303"
		WindowStyle="None" AllowsTransparency="True"
		Background="Transparent"
		MouseLeftButtonDown="Window_MouseLeftButtonDown"
		Loaded="Window_Loaded"
		>
	<Canvas Background="Transparent">
		<Image Height="600" Width="303" Source="imgs/pinpad.png" Canvas.Left="0" Canvas.Top="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		<Grid Height="141" Canvas.Left="28" Canvas.Top="61" Width="231">
			<Grid.Background>
				<RadialGradientBrush>
					<GradientStop Color="#9c9372" Offset="1"/>
					<GradientStop Color="#a39a71"/>
				</RadialGradientBrush>
			</Grid.Background>
			<TextBlock  x:Name="PinpadDisplay" Foreground="White" Margin="5,35"></TextBlock>
		</Grid>
	</Canvas>
</Window>
